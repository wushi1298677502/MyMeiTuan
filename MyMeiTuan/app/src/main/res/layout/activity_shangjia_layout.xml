<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2" >
    <RelativeLayout
        android:id="@+id/shangjia_relative_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/shangjia_textview_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部商家"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/shangjia_textview_two"
            android:layout_toRightOf="@id/shangjia_textview_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠商家"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/shangjia_imageview_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_action_search"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/shangjia_imageview_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/shangjia_imageview_one"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_action_map"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/shangjia_linearlayout"
        android:layout_below="@id/shangjia_relativelayout_one"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_marginTop="41dp">
        <Spinner
            android:id="@+id/shangjia_spinner_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawSelectorOnTop="true">

        </Spinner>
        <Spinner
            android:id="@+id/shangjia_spinner_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawSelectorOnTop="true">

        </Spinner>
        <Spinner
            android:id="@+id/shangjia_spinner_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawSelectorOnTop="true">

        </Spinner>
    </LinearLayout>
    <ScrollView
        android:id="@+id/shangjia_scrollview"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shangjia_scrollview_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成都金牛区西安南路街道十二桥社区"
                android:textSize="12sp"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_action_search"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"/>
            <ListView
                android:id="@+id/shangjia_listview"
                android:layout_below="@id/shangjia_scrollview_textview"
                android:layout_width="match_parent"
                android:layout_height="800dp">

            </ListView>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
